<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
            android:text="Cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="160dp" android:id="@+id/textView2" android:textSize="18sp"
            android:textColor="@color/titulo" android:textStyle="bold" android:typeface="monospace"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="213dp"
            android:layout_height="19dp"
            tools:layout_editor_absoluteY="56dp" tools:layout_editor_absoluteX="99dp" android:id="@+id/progressBar"
            android:indeterminate="false" android:progressTint="@color/titulo" android:progress="25" android:max="100"
    />
    <TextView
            android:text="Informações Pessoais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="89dp"
            tools:layout_editor_absoluteX="114dp" android:id="@+id/textView4"
            android:textColor="@color/TituloInformacao" android:typeface="monospace" android:textStyle="bold"/>
    <EditText
            android:layout_width="333dp"
            android:layout_height="32dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="172dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/campo_nome"
            android:textColor="@color/colorAccent" android:textSize="12sp"/>
    <EditText
            android:layout_width="333dp"
            android:layout_height="35dp"
            android:inputType="numberSigned"
            android:ems="10"
            tools:layout_editor_absoluteY="225dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/campo_cpf"
            android:textSize="12sp" android:textColor="@color/colorAccent"
    />
    <TextView
            android:text="CPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="206dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView"
            android:textColor="@color/barraDeProgresso" android:textAllCaps="false" android:typeface="monospace"
            android:textSize="14sp"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="33dp"
            android:inputType="date"
            android:ems="10"
            tools:layout_editor_absoluteY="284dp" tools:layout_editor_absoluteX="42dp" android:id="@+id/campoDataNasc"
            android:textSize="12sp"/>
    <TextView
            android:text="Data de nascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="268dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView5"
            android:textColor="@color/barraDeProgresso" android:textSize="14sp"
            android:typeface="monospace"/>
    <TextView
            android:text="Nome completo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="145dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView6" android:textSize="14sp"
            android:typeface="monospace" android:textColor="@color/barraDeProgresso"/>
    <EditText
            android:layout_width="334dp"
            android:layout_height="36dp"
            android:inputType="phone"
            android:ems="10"
            tools:layout_editor_absoluteY="419dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/editText4"
            android:textSize="12sp" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="403dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView7" android:textSize="14sp"
            android:typeface="monospace" android:textColor="@color/barraDeProgresso"/>
    <EditText
            android:layout_width="332dp"
            android:layout_height="36dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="545dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/editText5"
            android:textColor="@color/colorAccent" android:textSize="12sp"/>
    <TextView
            android:text="CEP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="529dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView8" android:textSize="14sp"
            android:typeface="monospace" android:textColor="@color/barraDeProgresso"/>
    <TextView
            android:text="Endereço completo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="462dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView9" android:typeface="monospace"
            android:textColor="@color/barraDeProgresso" android:textSize="14sp"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="481dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/editText6"
            android:textSize="12sp"/>
    <Button
            android:text="Próximo"
            android:layout_width="65dp"
            android:layout_height="23dp" tools:layout_editor_absoluteY="610dp"
            tools:layout_editor_absoluteX="320dp" android:id="@+id/button2" android:textColor="@color/textoBotao"
            android:background="@drawable/botao_personalizado" android:backgroundTint="@color/colorteste"
            android:textSize="10sp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="355dp"
            tools:layout_editor_absoluteX="41dp"/>
    <RadioButton
            android:text="Feminino"
            android:layout_width="87dp"
            android:layout_height="20dp" tools:layout_editor_absoluteY="364dp"
            tools:layout_editor_absoluteX="150dp" android:id="@+id/radioButton_feminino" android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:buttonTint="@color/TituloInformacao" android:checked="false" android:duplicateParentState="true"/>
    <RadioButton
            android:text="Masculino"
            android:layout_width="91dp"
            android:layout_height="20dp" tools:layout_editor_absoluteY="364dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/radioButton_masculino"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" android:checked="true" android:buttonTint="@color/TituloInformacao"/>
    <TextView
            android:text="Sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="331dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/textView10"
            android:textColor="@color/barraDeProgresso" android:textSize="14sp" android:typeface="monospace"/>
</android.support.constraint.ConstraintLayout>