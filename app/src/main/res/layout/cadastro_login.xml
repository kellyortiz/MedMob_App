<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Anterior"
            android:layout_width="65dp"
            android:layout_height="23dp" tools:layout_editor_absoluteY="423dp"
            tools:layout_editor_absoluteX="36dp" android:id="@+id/button4" android:textColor="@color/textoBotao"
            android:background="@drawable/botao_personalizado" android:backgroundTint="@color/colorteste"
            android:textSize="10sp" tools:ignore="MissingConstraints"/>
    <Button
            android:text="Próximo"
            android:layout_width="65dp"
            android:layout_height="23dp" tools:layout_editor_absoluteY="423dp"
            tools:layout_editor_absoluteX="316dp" android:id="@+id/button3" android:textColor="@color/textoBotao"
            android:background="@drawable/botao_personalizado" android:backgroundTint="@color/colorteste"
            android:textSize="10sp" tools:ignore="MissingConstraints" android:onClick="onClickRegistraLogin"/>
    <TextView
            android:text="Informações para login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="89dp"
            tools:layout_editor_absoluteX="105dp" android:id="@+id/textView12"
            android:textColor="@color/TituloInformacao" android:typeface="monospace" android:textStyle="bold"
            tools:ignore="MissingConstraints"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="213dp"
            android:layout_height="19dp"
            tools:layout_editor_absoluteY="56dp" tools:layout_editor_absoluteX="99dp" android:id="@+id/progressBar2"
            android:indeterminate="false" android:progressTint="@color/titulo" android:progress="50" android:max="100"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="160dp" android:id="@+id/textView11" android:textSize="18sp"
            android:typeface="monospace" android:textColor="@color/titulo" android:textStyle="bold"
            tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="346dp"
            android:layout_height="37dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="185dp" tools:layout_editor_absoluteX="35dp" android:id="@+id/editText"
            android:textSize="12sp" android:textColor="@color/colorAccent" tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="263dp" tools:layout_editor_absoluteX="36dp"
            android:textSize="14sp" tools:ignore="MissingConstraints" android:id="@+id/cadastroSenha"/>
    <EditText
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="348dp" tools:layout_editor_absoluteX="35dp" android:id="@+id/editText3"
            android:textSize="14sp" android:textColor="@color/colorAccent" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="165dp"
            tools:layout_editor_absoluteX="35dp" android:id="@+id/textView13"
            android:textColor="@color/barraDeProgresso" android:typeface="monospace" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="244dp"
            tools:layout_editor_absoluteX="35dp" android:id="@+id/cadastro_senha"
            android:textColor="@color/barraDeProgresso" android:typeface="monospace" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Confirmar senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="329dp"
            tools:layout_editor_absoluteX="36dp" android:id="@+id/textView16"
            android:textColor="@color/barraDeProgresso" android:typeface="monospace" tools:ignore="MissingConstraints"/>
</android.support.constraint.ConstraintLayout>